% The ``marginals'' key simultaneously sets the same justification for all marginal material
\define@choicekey*+[towcenter]{common}{marginals}[\@towcenter@kvtext\@towcenter@kvnum]{justified,raggedleft,raggedright,raggedouter,auto}[auto]{%
  \ifcase\@towcenter@kvnum\relax
    \ExecuteOptionsX[towcenter]<common>{citation=justified,sidenote=justified,caption=justified,marginnote=justified}% justified
  \or
    \ExecuteOptionsX[towcenter]<common>{citation=raggedleft,sidenote=raggedleft,caption=raggedleft,marginnote=raggedleft}% ragged left
  \or
    \ExecuteOptionsX[towcenter]<common>{citation=raggedright,sidenote=raggedright,caption=raggedright,marginnote=raggedright}% ragged right
  \or
    \ExecuteOptionsX[towcenter]<common>{citation=raggedouter,sidenote=raggedouter,caption=raggedouter,marginnote=raggedouter}% ragged outer (flush right on verso pages, flush left on recto pages)
  \or
    \ExecuteOptionsX[towcenter]<common>{citation=auto,sidenote=auto,caption=auto,marginnote=auto}% autodetects best justification mode based on all class options
  \fi
}{%
  \@towcenter@warning@noline{Invalid option `#1' for marginals key. Must be one of: justified, raggedleft, raggedright, raggedouter, auto}
  \ExecuteOptionsX[towcenter]<common>{citation=auto,sidenote=auto,caption=auto,marginnote=auto}% autodetects best justification mode based on all class options
}


