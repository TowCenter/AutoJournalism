  \@ifstar{\@towcenter@newlinetospace@i}{\@towcenter@newlinetospace@i}%
}

\def\@towcenter@newlinetospace@i{%
  \ifdim\lastskip>\z@\else\space\fi
  \ignorespaces%
}

\DeclareRobustCommand{\newlinetospace}[1]{%
  \let\@towcenter@orig@cr\\% save the original meaning of \\
