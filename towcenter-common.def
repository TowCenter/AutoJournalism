}{}

%%
% Detect if we're using LuaTeX

\newboolean{@towcenter@luatex}
\IfFileExists{ifluatex.sty}{%
  \RequirePackage{ifluatex}
  \ifthenelse{\boolean{luatex}}
    {\setboolean{@towcenter@luatex}{true}}
    {\setboolean{@towcenter@luatex}{false}}
}{% not using luatex
  \setboolean{@towcenter@luatex}{false}
}

