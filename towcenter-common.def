%%
%% This file contains the code that is common to the towcenter-LaTeX document classes.
%%

\ProvidesFile{towcenter-common.def}[2011/06/18 v3.5.2 Common code for the towcenter-LaTeX styles]

%%
% The `xkeyval' package simplifies the user interface for the document class options
\RequirePackage{xkeyval}

%%
% We use the `xifthen' package to handle our package option switches
\RequirePackage{xifthen}

%%
% Define some shortcut macros for error/warning/info logging.
\RequirePackage{hardwrap}
\GenerateClassLogMacros[@towcenter]{\@towcenter@pkgname}
\newcommand{\@towcenter@debug@info}[1]{\ifthenelse{\boolean{@towcenter@debug}}{\@towcenter@info{#1}}{}}
\newcommand{\@towcenter@debug@info@noline}[1]{\ifthenelse{\boolean{@towcenter@debug}}{\@towcenter@info@noline{#1}}{}}

%%
% `debug' option -- provides more information in the .log file for use in
% troubleshooting problems
\newboolean{@towcenter@debug}
\DeclareOptionX[towcenter]<common>{debug}{\setboolean{@towcenter@debug}{true}}

%%
% `nofonts' option -- doesn't load any fonts
% `fonts' option -- tries to load fonts
\newboolean{@towcenter@loadfonts}\setboolean{@towcenter@loadfonts}{true}
\DeclareOptionX[towcenter]<common>{fonts}{\setboolean{@towcenter@loadfonts}{true}}
\DeclareOptionX[towcenter]<common>{nofonts}{\setboolean{@towcenter@loadfonts}{false}}

%%
% `nols' option -- doesn't configure letterspacing
% `ls' option -- configures letterspacing
\newboolean{@towcenter@letterspace}\setboolean{@towcenter@letterspace}{true}
\DeclareOptionX[towcenter]<common>{ls}{\setboolean{@towcenter@letterspace}{true}}
\DeclareOptionX[towcenter]<common>{nols}{\setboolean{@towcenter@letterspace}{false}}

%%
% `nobib' option -- doesn't load natbib or adjust the \cite command
\newboolean{@towcenter@loadnatbib}\setboolean{@towcenter@loadnatbib}{true}
\DeclareOptionX[towcenter]<common>{nobib}{\setboolean{@towcenter@loadnatbib}{false}}

%%
% `titlepage' option -- creates a full title page with \maketitle

\newboolean{@towcenter@titlepage}
\DeclareOptionX[towcenter]<common>{titlepage}{\setboolean{@towcenter@titlepage}{true}}
\DeclareOptionX[towcenter]<common>{notitlepage}{\setboolean{@towcenter@titlepage}{false}}

%%
% `a4paper' option

\newboolean{@towcenter@afourpaper}
\DeclareOptionX[towcenter]<common>{a4paper}{\setboolean{@towcenter@afourpaper}{true}}

%%
% `b5paper' option

\newboolean{@towcenter@bfivepaper}
\DeclareOptionX[towcenter]<common>{b5paper}{\setboolean{@towcenter@bfivepaper}{true}}

%%
% `sfsidenotes' option -- typesets sidenotes in sans serif typeface

\newboolean{@towcenter@sfsidenotes}
\DeclareOptionX[towcenter]<common>{sfsidenotes}{\setboolean{@towcenter@sfsidenotes}{true}}

%%
% `symmetric' option -- puts marginpar space to the outside edge of the page
%   Note: this option forces the twoside option (see the .cls files)

\newboolean{@towcenter@symmetric}
\DeclareOptionX[towcenter]<common>{symmetric}{
  \setboolean{@towcenter@symmetric}{true}
  \@towcenter@info@noline{The `symmetric' option implies `twoside'}
  \ExecuteOptionsX[towcenter]<common>{twoside}
}

%%
% `twoside' option -- alternates running heads

\newboolean{@towcenter@twoside}
\DeclareOptionX[towcenter]<common>{twoside}{%
  \setboolean{@towcenter@twoside}{true}
  \@towcenter@info@noline{Passing the `twoside' option to the `\@towcenter@class' class}
  \PassOptionsToClass{twoside}{\@towcenter@class}
}

%%
% `notoc' option -- suppresses the towcenter-style table of contents

\newboolean{@towcenter@toc}
\setboolean{@towcenter@toc}{true}
\DeclareOptionX[towcenter]<common>{notoc}{\setboolean{@towcenter@toc}{false}}
\DeclareOptionX[towcenter]<common>{toc}{\setboolean{@towcenter@toc}{true}}

%%
% `justified' option -- uses fully justified text (flush left and flush
% right) instead of ragged right.

\newboolean{@towcenter@justified}
\DeclareOptionX[towcenter]<common>{justified}{\setboolean{@towcenter@justified}{true}}

%%
% `bidi' option -- loads the bidi package for bi-directional text

\newboolean{@towcenter@loadbidi}
\DeclareOptionX[towcenter]<common>{bidi}{\setboolean{@towcenter@loadbidi}{true}}
\DeclareOptionX[towcenter]<common>{nobidi}{\setboolean{@towcenter@loadbidi}{false}}

%%
% `nohyper' option -- suppresses loading of the hyperref package

\newboolean{@towcenter@loadhyper}
\setboolean{@towcenter@loadhyper}{true}
\DeclareOptionX[towcenter]<common>{hyper}{\setboolean{@towcenter@loadhyper}{true}}
\DeclareOptionX[towcenter]<common>{nohyper}{\setboolean{@towcenter@loadhyper}{false}}

%%
% `sidenote', `marginnote', `caption', `citation', `marginals' options
% Each allows one of {justified,raggedleft,raggedright,raggedouter,auto}.

\newcommand*{\@towcenter@sidenote@justification}{\@towcenter@justification@autodetect}
\define@choicekey*+[towcenter]{common}{sidenote}[\@towcenter@kvtext\@towcenter@kvnum]{justified,raggedleft,raggedright,raggedouter,auto}[auto]{%
  \ifcase\@towcenter@kvnum\relax
    \renewcommand*{\@towcenter@sidenote@justification}{\justifying}% justified
  \or
    \renewcommand*{\@towcenter@sidenote@justification}{\RaggedLeft}% ragged left
  \or
    \renewcommand*{\@towcenter@sidenote@justification}{\RaggedRight}% ragged right
  \or
    \renewcommand*{\@towcenter@sidenote@justification}{\@towcenter@justification@outer}% ragged outer (flush right on verso pages, flush left on recto pages)
  \or
    \renewcommand*{\@towcenter@sidenote@justification}{\@towcenter@justification@autodetect}% autodetects best justification mode based on all class options
  \fi
}{%
  \@towcenter@warning@noline{Invalid option `#1' for sidenote key. Must be one of: justified, raggedleft, raggedright, raggedouter, auto}
  \renewcommand*{\@towcenter@sidenote@justification}{\@towcenter@justification@autodetect}% autodetects best justification mode based on all class options
}

