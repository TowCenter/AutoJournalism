% Store the caption and label contents
\newcommand{\@towcenter@stored@shortcaption}{}
\newcommand{\@towcenter@stored@caption}{}
\newcommand{\@towcenter@stored@label}{}

\long\def\@towcenter@caption[#1][#2]#3{%
