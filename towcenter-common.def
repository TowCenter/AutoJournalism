%%
% A collection of macros to be used with the new towcenter-style float environments.
% \setfloatalignment forces the caption placement to be treated as top, bottom, etc.
% \forcerectofloat forces the float to be treated as if it were appearing on a recto page.
% \forceversofloat does the same, but for verso pages.

\newcommand{\@towcenter@float@debug@info}{}% contains debug info generated as the float is processed
\newcommand{\@towcenter@float@debug}[1]{% adds debug info to the queue for output
  \ifthenelse{\equal{\@towcenter@float@debug@info}{}}%
    {\def\@towcenter@float@debug@info{#1}}%
    {\g@addto@macro\@towcenter@float@debug@info{\MessageBreak#1}}%
}

\newcommand{\floatalignment}{x}% holds the current float alignment (t, b, h, p)
\newcommand{\setfloatalignment}[1]{\global\def\floatalignment{#1}\@towcenter@float@debug{Forcing position: [#1]}}% manually sets the float alignment
\newboolean{@towcenter@float@recto}
\newcommand{\forcerectofloat}{\gsetboolean{@towcenter@float@recto}{true}\@towcenter@float@debug{Forcing page: [recto]}}
\newcommand{\forceversofloat}{\gsetboolean{@towcenter@float@recto}{false}\@towcenter@float@debug{Forcing page: [verso]}}

