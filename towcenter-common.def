%%
% Detect of the float package has been loaded

\AtBeginDocument{%
  \@ifpackageloaded{float}{%
    % Save the redefined float environment (instead of the LaTeX float environment)
    \let\@towcenter@orig@float\@float
    \let\@towcenter@orig@endfloat\end@float

    % Define Tuftian float styles (with the caption in the margin)
    \newcommand{\floatc@towcenterplain}[2]{%
      \begin{lrbox}{\@towcenter@caption@box}%
        \begin{minipage}[\floatalignment]{\marginparwidth}\hbox{}%
          \@towcenter@caption@font{\@fs@cfont #1:} #2\par%
        \end{minipage}%
      \end{lrbox}%
      \smash{\hspace{\@towcenter@caption@fill}\usebox{\@towcenter@caption@box}}%
    }
    \newcommand{\fs@towcenterplain}{%
      \def\@fs@cfont{\@towcenter@caption@font}%
      \let\@fs@capt\floatc@towcenterplain%
      \def\@fs@pre{}%
      \def\@fs@post{}%
      \def\@fs@mid{}%
      \let\@fs@iftopcapt\iftrue%
    }
    \let\fs@towcenterplaintop=\fs@towcenterplain
    \let\floatc@towcenterplaintop=\floatc@towcenterplain
    \newcommand\floatc@towcenterruled[2]{%
      {\@fs@cfont #1} #2\par%
    }
    \newcommand\fs@towcenterruled{%
      \def\@fs@cfont{\@towcenter@caption@font}%
      \let\@fs@capt\floatc@towcenterplain%
      \def\@fs@pre{\hrule height.8pt depth0pt width\textwidth \kern2pt}%
      \def\@fs@post{\kern2pt\hrule width\textwidth\relax}%
      \def\@fs@mid{}%
      \let\@fs@iftopcapt\iftrue%
    }
    \newcommand\fs@towcenterboxed{%
      \def\@fs@cfont{}%
      \let\@fs@capt\floatc@towcenterplain%
      \def\@fs@pre{%
        \setbox\@currbox\vbox{\hbadness10000
        \moveleft3.4pt\vbox{\advance\hsize by6.8pt
          \hrule \hbox to\hsize{\vrule\kern3pt
            \vbox{\kern3pt\box\@currbox\kern3pt}\kern3pt\vrule}\hrule}}
      }%
      \def\@fs@mid{\kern2pt}%
      \def\@fs@post{}%
      \let\@fs@iftopcapt\iftrue%
    }
  }{%
    % Nothing to do
  }
}

