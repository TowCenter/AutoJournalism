%%
% Detect whether we're in two-side mode or not.  (Used to set up running
% heads later.)

\ifthenelse{\boolean{@twoside}}
  {\setboolean{@towcenter@twoside}{true}}
  {}



%%
% Detect if we're using pdfLaTeX

\newboolean{@towcenter@pdf}
\IfFileExists{ifpdf.sty}{%
  \RequirePackage{ifpdf}
  \ifthenelse{\boolean{pdf}}
    {\setboolean{@towcenter@pdf}{true}}
    {\setboolean{@towcenter@pdf}{false}}
}{% assume we're not using pdfTex?
  \setboolean{@towcenter@pdf}{false}
}

%%
% Detect if we're using XeLaTeX

\newboolean{@towcenter@xetex}
\IfFileExists{ifxetex.sty}{%
  \RequirePackage{ifxetex}
  \ifthenelse{\boolean{xetex}}
    {\setboolean{@towcenter@xetex}{true}}
    {\setboolean{@towcenter@xetex}{false}}
}{% not using xelatex
