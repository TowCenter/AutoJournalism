}

\newcommand{\@towcenter@fps}{}

\newboolean{@towcenter@float@star}
\newlength{\@towcenter@float@contents@width}

%%
% Define a float environment to place the captions in the margin space

\newenvironment{@towcenter@float}[3][htbp]%
  {% begin @towcenter@float
    % Should this float be full-width or just text-width?
    \ifthenelse{\equal{#3}{star}}%
      {\gsetboolean{@towcenter@float@star}{true}}%
      {\gsetboolean{@towcenter@float@star}{false}}%
    % Check page side (recto/verso) and store detected value -- can be overriden in environment contents
    \@towcenter@checkoddpage%
    \ifthenelse{\boolean{@towcenter@odd@page}}%
      {\gsetboolean{@towcenter@float@recto}{true}\@towcenter@float@debug{Detected page: [recto/odd]}}%
      {\gsetboolean{@towcenter@float@recto}{false}\@towcenter@float@debug{Detected page: [verso/even]}}%
    % If the float placement specifier is 'b' and only 'b', then bottom-align the mini-pages, otherwise top-align them.
    \renewcommand{\@towcenter@fps}{#1}%
    \@towcenter@float@debug{Allowed positions: [#1]}%
    \ifthenelse{\equal{#1}{b}\OR\equal{#1}{B}}%
      {\renewcommand{\floatalignment}{b}\@towcenter@float@debug{Presumed position: [bottom]}}%
      {\renewcommand{\floatalignment}{t}\@towcenter@float@debug{Presumed position: [top]}}%
    % Capture the contents of the \caption and \label commands to use later
    \global\let\@towcenter@orig@caption\caption%
    \global\let\@towcenter@orig@label\label%

    % Hackily removing optional params from "caption" in order to achieve compilation

    %\renewcommand{\caption}{\optparams{\@towcenter@caption}{[][0pt]}}%

    \renewcommand{\label}[1]{\@towcenter@label{##1}}%
    % Handle subfigure package compatibility
    \ifthenelse{\boolean{@towcenter@packages@subfigure}}{%
      % don't move the label while inside a \subfigure or \subtable command
      \global\let\label\@towcenter@orig@label%
    }{}% subfigure package is not loaded
    \@towcenter@orig@float{#2}[#1]%
    \ifthenelse{\boolean{@towcenter@float@star}}%
      {\setlength{\@towcenter@float@contents@width}{\@towcenter@fullwidth}}%
      {\setlength{\@towcenter@float@contents@width}{\textwidth}}%
    \begin{lrbox}{\@towcenter@figure@box}%
      \begin{minipage}[\floatalignment]{\@towcenter@float@contents@width}\hbox{}%
  }{% end @towcenter@float
      \par\hbox{}\vspace{-\baselineskip}\ifthenelse{\prevdepth>0}{\vspace{-\prevdepth}}{}% align baselines of boxes
      \end{minipage}%
    \end{lrbox}%
    % build the caption box
    \begin{lrbox}{\@towcenter@caption@box}%
      \begin{minipage}[\floatalignment]{\marginparwidth}\hbox{}%
        \ifthenelse{\NOT\equal{\@towcenter@stored@caption}{}}{\@towcenter@orig@caption[\@towcenter@stored@shortcaption]{\@towcenter@stored@caption}}{}%
        \ifthenelse{\NOT\equal{\@towcenter@stored@label}{}}{\@towcenter@orig@label{\@towcenter@stored@label}}{}%
        \par\vspace{-\prevdepth}%% TODO: DOUBLE-CHECK FOR SAFETY
      \end{minipage}%
    \end{lrbox}%
    % now typeset the stored boxes
    \begin{fullwidth}%
      \begin{minipage}[\floatalignment]{\linewidth}%
        \ifthenelse{\boolean{@towcenter@float@star}}%
          {\@towcenter@float@fullwidth[\@towcenter@caption@vertical@offset]{\@towcenter@figure@box}{\@towcenter@caption@box}}%
          {\@towcenter@float@textwidth[\@towcenter@caption@vertical@offset]{\@towcenter@figure@box}{\@towcenter@caption@box}}%
      \end{minipage}%
    \end{fullwidth}%
    \@towcenter@orig@endfloat% end original LaTeX float environment
    % output debug info
    \ifthenelse{\boolean{@towcenter@debug}}{%
      \typeout{^^J^^J----------- towcenter-LaTeX float information ----------}%
      \ifthenelse{\equal{\@towcenter@stored@label}{}}%
        {\typeout{Warning: Float unlabeled!}}%
        {\typeout{Float label: [\@towcenter@stored@label]}}%
      \typeout{Page number: [\thepage]}%
      \def\MessageBreak{^^J}%
      \typeout{\@towcenter@float@debug@info}%
      \ifthenelse{\boolean{@towcenter@symmetric}}%
        {\typeout{Symmetric: [true]}}%
        {\typeout{Symmetric: [false]}}%
      \typeout{----------------------------------------------------^^J^^J}%
    }{}%
    % reset commands and temp boxes and captions
    \gdef\@towcenter@float@debug@info{}%
    \let\caption\@towcenter@orig@caption%
    \let\label\@towcenter@orig@label%
    \begin{lrbox}{\@towcenter@figure@box}\hbox{}\end{lrbox}%
    \begin{lrbox}{\@towcenter@caption@box}\hbox{}\end{lrbox}%
    \gdef\@towcenter@stored@shortcaption{}%
    \gdef\@towcenter@stored@caption{}%
    \gdef\@towcenter@stored@label{}%
    \gsetlength{\@towcenter@caption@vertical@offset}{0pt}% reset caption offset
  }

\newcommand{\@towcenter@float@textwidth}[3][0pt]{%
  \ifthenelse{\NOT\boolean{@towcenter@symmetric}\OR\boolean{@towcenter@float@recto}}{%
    % asymmetric or page is odd, so caption is on the right
    \hbox{%
      \usebox{#2}%
      \hspace{\marginparsep}%
      \smash{\raisebox{#1}{\usebox{#3}}}%
    }%
    \@towcenter@float@debug{Caption position: [right]}%
  }{% symmetric pages and page is even, so caption is on the left
    \hbox{%
      \smash{\raisebox{#1}{\usebox{#3}}}%
      \hspace{\marginparsep}%
      \usebox{#2}%
    }%
    \@towcenter@float@debug{Caption position: [left]}%
  }%
}

\newcommand{\@towcenter@float@fullwidth}[3][0pt]{%
  \ifthenelse{\equal{\floatalignment}{b}}%
    {% place caption above figure
      \ifthenelse{\NOT\boolean{@towcenter@symmetric}\OR\boolean{@towcenter@float@recto}}%
        {\hfill\smash{\raisebox{#1}{\usebox{#3}}}\par\usebox{#2}\@towcenter@float@debug{Caption position: [above right]}}% caption on the right
        {\smash{\raisebox{#1}{\usebox{#3}}}\hfill\par\usebox{#2}\@towcenter@float@debug{Caption position: [above left]}}% caption on the left
    }{% place caption below figure
      \ifthenelse{\NOT\boolean{@towcenter@symmetric}\OR\boolean{@towcenter@float@recto}}%
        {\usebox{#2}\par\hfill\smash{\raisebox{#1}{\usebox{#3}}}\@towcenter@float@debug{Caption position: [below right]}}% caption on the right
        {\usebox{#2}\par\smash{\raisebox{#1}{\usebox{#3}}}\hfill\@towcenter@float@debug{Caption position: [below left]}}% caption on the left
    }%
}


